{
  "extends": "airbnb",
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "semi": "off",
    "no-unused-expressions": ["error", {"allowTernary": true}],
    "no-console": "off",
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
    "jsx-quotes": ["error", "prefer-single"]
  },
  "globals": {
    "document": true
  }
}